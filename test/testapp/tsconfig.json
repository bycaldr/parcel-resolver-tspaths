{
  "extends": "../../tsconfig.json",
  "include": ["src/**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "src",
    "baseUrl": "src",
    "declaration": true,
    "module": "esnext",
    "target": "esnext",
    "importHelpers": false,
    "typeRoots": ["node_modules/@types"],
    "lib": ["esnext", "dom"],
    "paths": {
      "@test/*": ["test/*", "test/index"],
      "@test": ["test/index"]
    }
  }
}
